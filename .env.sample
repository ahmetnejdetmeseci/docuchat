PROJECT_NAME=docuchat
ENV=local

# Networking
ALLOWED_HOSTS=*
BACKEND_HOST=backend
BACKEND_PORT=8000

# Postgres
POSTGRES_DB=docuchat
POSTGRES_USER=docu
POSTGRES_PASSWORD=docu_pw
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# LLM
LLM_PROVIDER=gemini
GEMINI_API_KEY=         # leave blank to use Fake LLM
GEMINI_MODEL=models/gemini-2.5-flash
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=1024

# Retrieval
TOP_K=4
CHUNK_SIZE=900
CHUNK_OVERLAP=150

# Auth bypass (no Keycloak in Step-2 package)
BYPASS_AUTH=true
DEFAULT_TENANT=demo

DJANGO_SECRET_KEY=dev-secret-change-me
DJANGO_DEBUG=1
