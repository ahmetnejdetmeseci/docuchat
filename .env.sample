PROJECT_NAME=docuchat
ENV=local

# Networking
ALLOWED_HOSTS=*
BACKEND_HOST=backend
BACKEND_PORT=8000

# Postgres
POSTGRES_DB=docuchat
POSTGRES_USER=docu
POSTGRES_PASSWORD=docu_pw
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# HTTP en kolay
VITE_KEYCLOAK_URL=http://localhost:8081
VITE_KEYCLOAK_REALM=docuchat
VITE_KEYCLOAK_CLIENT_ID=docuchat-frontend
# WebSocket
VITE_WS_URL=ws://localhost:8080/ws

#VITE_WS_BASE=ws://localhost:8080/ws
VITE_AUTH_PROVIDER=keycloak
#VITE_KEYCLOAK_URL=http://localhost:8081

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# LLM
LLM_PROVIDER=gemini
GEMINI_API_KEY=         # leave blank to use Fake LLM
GEMINI_MODEL=models/gemini-2.5-flash
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=1536

# Retrieval
TOP_K=5
CHUNK_SIZE=700
CHUNK_OVERLAP=200

# Auth bypass (no Keycloak in Step-2 package)
BYPASS_AUTH=true
DISABLE_AUTH=1 #FLAG koydum - Keycloak
DEFAULT_TENANT=demo

DJANGO_SECRET_KEY=dev-secret-change-me
DJANGO_DEBUG=1
